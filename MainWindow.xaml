<Window x:Class="MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Arduino_Serial_Connection"
		mc:Ignorable="d"
		Title="Arduino Serial Connection"
		MinWidth="480"
		Loaded="Window_Loaded"
		Background="#fafafa"
		Closing="Window_Closing"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen"
		SizeToContent="WidthAndHeight">
	<DockPanel>
		<StatusBar DockPanel.Dock="Bottom"
				   Background="#eeeeee"
				   Padding="8">
			<StatusBarItem>
				<TextBlock x:Name="TxtStatus"
						   Text="Disconnected"
						   FontStyle="Italic"
						   Foreground="Gray" />
			</StatusBarItem>
		</StatusBar>
		<StackPanel DockPanel.Dock="Bottom"
					Margin="20,0,20,12">
			<TextBlock Text="Log Output"
					   FontSize="16"
					   FontWeight="Bold"
					   Margin="0,0,0,8" />
			<Border Padding="8"
					BorderBrush="#cccccc"
					BorderThickness="1"
					CornerRadius="4"
					Background="White"
					SnapsToDevicePixels="True"
					Height="110">
				<TextBox x:Name="TxtData"
						 FontSize="14"
						 IsReadOnly="True"
						 BorderThickness="0"
						 VerticalScrollBarVisibility="Auto"
						 TextWrapping="Wrap"
						 AcceptsReturn="True"
						 Background="Transparent" />
			</Border>
		</StackPanel>
		<StackPanel Orientation="Vertical"
					Margin="20"
					DockPanel.Dock="Top">
			<Button x:Name="BtnOpenConnector"
					Content="Connect to Port"
					Margin="0,0,0,8"
					Padding="8"
					FontSize="14"
					FontWeight="SemiBold"
					Background="#007ACC"
					Foreground="White"
					Click="BtnOpenConnector_Click" />
			<ToggleButton x:Name="BtnToggleOnOff"
						  Content="Turn ON"
						  Margin="0,0,0,10"
						  Padding="8"
						  FontSize="14"
						  FontWeight="SemiBold"
						  Background="#4CAF50"
						  Foreground="White"
						  BorderThickness="0"
						  Height="36"
						  Checked="BtnToggleOnOff_Checked"
						  Unchecked="BtnToggleOnOff_Unchecked"
						  IsEnabled="False" />
		</StackPanel>
	</DockPanel>
</Window>