<Window x:Class="SerialPortConnectorWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Connect Port"
		WindowStartupLocation="CenterScreen"
		WindowStyle="None"
		FontSize="16"
		ResizeMode="NoResize"
		ShowInTaskbar="False"
		SizeToContent="WidthAndHeight"
		Loaded="Window_Loaded"
		Closing="Window_Closing">
	<StackPanel Margin="20">
		<TextBlock Text="Connect to Serial Port"
				   FontSize="20"
				   FontWeight="Bold"
				   TextAlignment="Center"
				   Foreground="#333" />
		<Rectangle Height="8" />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Label Content="Port:"
				   Grid.Column="0"
				   VerticalAlignment="Center"
				   FontWeight="Bold" />
			<ComboBox x:Name="CboPorts"
					  Grid.Column="1"
					  Height="28"
					  VerticalAlignment="Center" />
		</Grid>
		<Rectangle Height="4" />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Label Content="Baud:"
				   Grid.Column="0"
				   VerticalAlignment="Center"
				   FontWeight="Bold" />
			<ComboBox x:Name="CboBaudRates"
					  Grid.Column="1"
					  Height="28"
					  VerticalAlignment="Center"
					  SelectedIndex="0">
				<ComboBoxItem Content="9600"
							  IsSelected="True" />
				<ComboBoxItem Content="19200" />
				<ComboBoxItem Content="38400" />
				<ComboBoxItem Content="57600" />
				<ComboBoxItem Content="115200" />
			</ComboBox>
		</Grid>
		<Rectangle Height="8" />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="8" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Button x:Name="BtnConnect"
					Grid.Column="0"
					Padding="12,8"
					Content="Connect"
					Background="#4CAF50"
					Foreground="White"
					Click="BtnConnect_Click" />
			<Button x:Name="BtnCancel"
					Grid.Column="2"
					Padding="12,8"
					Content="Cancel"
					Background="#e0e0e0"
					Foreground="#333"
					Click="BtnCancel_Click" />
		</Grid>
	</StackPanel>
</Window>
