<Window x:Class="SerialPortConnectorWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Connect Port"
		WindowStartupLocation="CenterScreen"
		WindowStyle="None"
		FontSize="14"
		ResizeMode="NoResize"
		ShowInTaskbar="False"
		SizeToContent="WidthAndHeight"
		Loaded="Window_Loaded">
	<Border BorderThickness="1"
			CornerRadius="8"
			Padding="20">
		<StackPanel>
			<TextBlock Text="Connect to Serial Port"
					   FontSize="16"
					   FontWeight="Bold"
					   Foreground="#333"
					   Margin="0,0,0,16" />
			<Grid Margin="0,0,0,12">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="80" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Label Content="Port:"
					   Grid.Column="0"
					   VerticalAlignment="Center"
					   FontWeight="Bold" />
				<ComboBox x:Name="CboPorts"
						  Grid.Column="1"
						  Height="28"
						  VerticalAlignment="Center" />
			</Grid>
			<Grid Margin="0,0,0,20">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="80" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Label Content="Baud:"
					   Grid.Column="0"
					   VerticalAlignment="Center"
					   FontWeight="Bold" />
				<ComboBox x:Name="CboBaudRates"
						  Grid.Column="1"
						  Height="28"
						  VerticalAlignment="Center"
						  SelectedIndex="0">
					<ComboBoxItem Content="9600"
								  IsSelected="True" />
					<ComboBoxItem Content="19200" />
					<ComboBoxItem Content="38400" />
					<ComboBoxItem Content="57600" />
					<ComboBoxItem Content="115200" />
				</ComboBox>
			</Grid>
			<StackPanel Orientation="Horizontal"
						HorizontalAlignment="Right">
				<Button x:Name="BtnConnect"
						Content="Connect"
						Width="90"
						Margin="0,0,8,0"
						Padding="6,3"
						Background="#4CAF50"
						Foreground="White"
						FontWeight="SemiBold"
						Click="BtnConnect_Click" />
				<Button x:Name="BtnCancel"
						Content="Cancel"
						Width="90"
						Padding="6,3"
						Background="#e0e0e0"
						Foreground="#333"
						FontWeight="SemiBold"
						Click="BtnCancel_Click" />
			</StackPanel>
		</StackPanel>
	</Border>
</Window>
